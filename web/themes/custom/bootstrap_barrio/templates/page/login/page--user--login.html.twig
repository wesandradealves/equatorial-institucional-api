<div id="wrap" class="d-flex flex-column justify-content-center align-items-center">
    <div class="container">
        {% if logo %}
            <h1><img src="{{logo}}" alt="{{ site_name }}" loading="lazy" class="img-fluid" /></h1>
        {% endif %}
        
        {% if form %}
            {{form}}
        {% endif %}

        {% if home_bg %}
            <style>
                body {
                    background: url({{home_bg}}) center center / cover no-repeat white;
                }
            </style>
        {% endif %}    
    </div>
</div>